<div class="Form">
    <img src="img/backgroud.jpg" alt="">
    <div id="registerForm" class="container mx-auto my-10 p-4 bg-white shadow-lg rounded-lg">
        <div class="register mb-6">
            <h1 class="text-2xl font-bold">Đăng Ký</h1>
        </div>
        <div class="inputForm mb-4">
            <div class="username flex items-center border-b border-gray-300 py-2">
                <i class="fa-solid fa-user text-gray-700"></i>
                <input class="pl-2 ml-2 border-none focus:outline-none w-full" type="text" name="" id="user" placeholder="Tên tài khoản">
            </div>
        </div>
        <div class="password mb-4">
            <div class="passwordForm flex items-center border-b border-gray-300 py-2">
                <i class="fa-solid fa-lock text-gray-700"></i>
                <input class="pl-2 ml-2 border-none focus:outline-none w-full" type="password" id="password" placeholder="Mật khẩu">
            </div>
        </div>
        <div class="Co-password mb-4">
            <div class="Co-passwordForm flex items-center border-b border-gray-300 py-2">
                <i class="fa-solid fa-lock text-gray-700"></i>
                <input class="pl-2 ml-2 border-none focus:outline-none w-full" type="password" id="confirmPassword" placeholder="Nhập lại mật khẩu">
            </div>
        </div>
        <div class="email">
            <div class="emailForm flex items-center border-b border-gray-300 py-2">
                <i class="bx bx-lock-alt text-gray-700"></i>
                <input class="pl-2 ml-2 border-none focus:outline-none w-full" type="text" id="email" placeholder="Email">
            </div>
        </div>
        <button class="px-4 py-2 bg-[#DE9E5B] text-white rounded hover:bg-[#BF7B3E]" type="submit">Đăng Ký</button>
    </div>
</div>